<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.posts.PostsActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/post_act_toolbar"/>

    <Button
        android:id="@+id/post_upload_image_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/post_direct_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="501dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/allerta_stencil"
        android:text="Add Image and Post" />

    <EditText
        android:id="@+id/post_body"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/post_title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Please enter your tips and messages here..."
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/post_page_title"
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/allerta"
        android:text="Give us your insight"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <Button
        android:id="@+id/post_direct_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_body"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/button_background_type3"
        android:fontFamily="@font/allerta_stencil"
        android:text="Post" />

    <EditText
        android:id="@+id/post_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/post_page_title"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:hint="Please enter your title here..." />


</RelativeLayout>