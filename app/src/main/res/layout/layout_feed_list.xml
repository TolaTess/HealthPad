<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/feed_image"
                    android:layout_width="361dp"
                    android:layout_height="152dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/feed_display_name"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/health_pad_logo" />

                <ImageView
                    android:id="@+id/feed_like_icon"
                    android:layout_width="22dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginStart="12dp"
                    app:srcCompat="@drawable/heart" />

                <TextView
                    android:id="@+id/feed_likes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="false"
                    android:layout_below="@id/feed_caption"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="42dp"
                    android:layout_marginTop="-25dp"
                    android:fontFamily="@font/allerta"
                    android:text="@string/sample_post_view" />

                <TextView
                    android:id="@+id/feed_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/allerta"
                    android:text="Jo Doe"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/feed_caption"
                    android:layout_width="179dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="129dp"
                    android:layout_marginTop="203dp"
                    android:fontFamily="@font/allerta_stencil"
                    android:text="@string/sample_post_msg"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/feed_profile_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/heart" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>