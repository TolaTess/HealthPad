<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/recycler_shape_ii">

        <ImageView
            android:id="@+id/req_online_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/req_users_image"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-30dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/online_background" />

        <TextView
            android:id="@+id/req_users_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/req_users_name"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/allerta"
            android:maxWidth="230dp"
            android:text="user status"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/req_users_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/allerta_stencil"
            android:maxWidth="200dp"
            android:text="@string/display_name"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/req_users_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp" />

    </RelativeLayout>



</RelativeLayout>