<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/recycler_shape_ii"
    android:padding="5dp">


    <ImageView
        android:id="@+id/chat_online_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/chat_users_image"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/online_background"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/chat_conv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/chat_username"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta"
        android:maxWidth="230dp"
        android:text="No Recent Message"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/chat_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/allerta_stencil"
        android:maxWidth="180dp"
        android:text="@string/display_name"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_users_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp" />

</RelativeLayout>